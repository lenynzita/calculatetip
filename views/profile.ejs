<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Playfair+Display&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1 class="calculeH1" > Calcule Your Tips</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div >
         

          
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <label for="" > Name of the Restaurant</label>
            <input type="text" placeholder="Restaurant" value="<%= user.local.email %>" name="name">
            <br> <br>
            <label for="">Total of the food</label>
            <input type="number" placeholder=" $0.00" name="msg">
            <br> <br>
            <label for="">How much tips</label>
            <select  name="tips" id="">
              <option value="0">0%</option>
              <option value="5">5%</option>
              <option value="10">10%</option>
              <option value="20">20%</option>
              <option value="50">50%</option>
            </select>
            <br> <br>
            <button class="btn" type="submit">Pay</button>
          </form>

          <h3></h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span class="spam"><%= messages[i].name %></span>
              <span class="spam"> you paid $<%= messages[i].msg %> and    </span>
              <span class="spam">  your tips$<%= messages[i].tips %>.</span>
              <span><i class="fa fa-edit"></i></span>
              <!-- <span><i class="fa fa-thumbs-down" ></i></span> -->
              <span><i class="fa fa-trash-o" ></i></span>
            </li>
          <% } %>
          </ul>
        
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
